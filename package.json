{
	"name": "pm-manager",
	"version": "1.0.0",
	"description": "Productivity Manager is a time management tool that takes your schedule and turns it into GitHub Issues",
	"main": "index.ts",
	"scripts": {
		"dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/index.ts",
		"build": "tsc && tsc-alias",
		"start": "node dist/index.js",
		"typecheck": "tsc --noEmit",
		"clean": "rm -rf dist"
	},
	"keywords": [
		"productivity",
		"task-management",
		"github",
		"automation"
	],
	"author": "aditsuru-git",
	"license": "ISC",
	"devDependencies": {
		"@types/js-yaml": "^4.0.9",
		"@types/node": "^24.7.2",
		"@types/node-cron": "^3.0.11",
		"@types/node-schedule": "^2.1.8",
		"ts-node": "^10.9.2",
		"ts-node-dev": "^2.0.0",
		"tsc-alias": "^1.8.16",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.9.3",
		"pino-pretty": "^13.1.2"
	},
	"dependencies": {
		"js-yaml": "^4.1.0",
		"node-cron": "^4.2.1",
		"node-schedule": "^2.1.1",
		"dotenv": "^17.2.3",
		"octokit": "^5.0.4",
		"pino": "^10.1.0",
		"zod": "^4.1.12"
	}
}
